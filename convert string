# You are given a string 'STR'. You have to convert the first alphabet of each word in a string to UPPER CASE.
#include <bits/stdc++.h> 
string convertString(string str) 
{
	 bool makeUpper = true;

    for(int i = 0; i < str.length(); i++) {
        if(str[i] == ' ') {
            makeUpper = true;           // Next character should be uppercase
        } 
        else if(makeUpper) {
            str[i] = toupper(str[i]);   // Convert first letter to uppercase
            makeUpper = false;
        }
    }

    return str;
}
